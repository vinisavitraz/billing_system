generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model billing {
  id               Int           @id @default(autoincrement())
  debt_id          String        @db.VarChar(20)
  government_id    String        @db.VarChar(11)
  email            String        @db.VarChar(100)
  name             String        @db.VarChar(200)
  amount           Decimal
  due_date         DateTime      @db.DateTime(0)
  status           String        @db.VarChar(20)
  payments         payment[]

  @@index([status])
}

model payment {
  id               Int           @id @default(autoincrement())
  paid_at          DateTime      @db.DateTime(0)
  paid_amount      Decimal
  paid_by          String        @db.VarChar(200)
  billing_id       Int
  billing          billing       @relation(fields: [billing_id], references: [id])
}

model job {
  id               Int           @id @default(autoincrement())
  queue            String        @db.VarChar(50)
  reference        String        @db.VarChar(100)
  status           String        @db.VarChar(20)
  input            String        @db.VarChar(350) @default("")

  @@index([queue, status])
}
